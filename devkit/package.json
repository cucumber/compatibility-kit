{
  "name": "cck-devkit",
  "version": "11.0.0",
  "description": "Development kit for the cucumber compatibility kit packages",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build",
    "pretest": "npm run build",
    "test": "run-for-every-file --src 'samples/**/*.ndjson' --run 'npx shx cat {{src-file}} | node dist/validate.js'",
    "generate-ndjson": "dotenv-run-script .ci_env -- generate-ndjson:features && dotenv-run-script .ci_env -- generate-ndjson:markdown",
    "generate-ndjson:features": "run-for-every-file --src 'samples/**/*.feature' --run 'npx fake-cucumber --predictable-ids {{src-file}} | jq -cS > {{src-file}}.ndjson'",
    "generate-ndjson:markdown": "run-for-every-file --src 'samples/**/*.feature.md' --run 'npx fake-cucumber --predictable-ids {{src-file}} | jq -cS > {{src-file}}.ndjson'",
    "postgenerate-ndjson": "npm test && npm run copy-samples",
    "copy-samples": "npm run copy-to:javascript && npm run copy-to:ruby",
    "copy-to:javascript": "shx cp -r samples/* ../javascript/features",
    "copy-to:ruby": "shx cp -r samples/* ../ruby/features && rm -rf ../ruby/features/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cucumber/compatibility-kit.git"
  },
  "author": "\"Aurelien Reeves (https://github.com/aurelien-reeves)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cucumber/compatibility-kit/issues"
  },
  "homepage": "https://github.com/cucumber/compatibility-kit#readme",
  "devDependencies": {
    "@cucumber/fake-cucumber": "^16.0.0",
    "@cucumber/messages": "^19.1.2",
    "@types/node": "^18.0.0",
    "ajv": "^8.11.0",
    "dotenv-run-script": "^0.2.0",
    "run-for-every-file": "^1.1.0",
    "shx": "^0.3.4",
    "stream-buffers": "^3.0.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  }
}
