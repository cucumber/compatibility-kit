{
  "name": "@cucumber/devkit",
  "version": "0.0.0",
  "description": "Development kit for the cucumber compatibility kit packages",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "copy-samples": "npm run copy-to:javascript && npm run copy-to:ruby && npm run copy-to:java",
    "copy-to:javascript": "shx cp -r samples/* ../javascript/features",
    "copy-to:ruby": "shx cp -r samples/* ../ruby/features && rm -rf ../ruby/features/**/*.ts",
    "copy-to:java": "shx cp -r samples/* ../java/src/main/resources/io/cucumber/compatibilitykit/features && rm -rf ../java/src/main/resources/io/cucumber/compatibilitykit/features/**/*.ts",
    "copy-to:python": "shx cp -r samples/* ../python/src/cucumber_compatibility_kit/features && rm -rf ../python/src/cucumber_compatibility_kit/features/**/*.ts",
    "fix": "eslint --max-warnings 0 src test --fix && prettier --write src test",
    "generate": "vitest run --update",
    "lint": "eslint --max-warnings 0 src test && prettier --check src test",
    "postgenerate": "npm run copy-samples",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cucumber/compatibility-kit.git"
  },
  "author": "Aurelien Reeves (https://github.com/aurelien-reeves)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cucumber/compatibility-kit/issues"
  },
  "homepage": "https://github.com/cucumber/compatibility-kit#readme",
  "dependencies": {
    "@cucumber/ci-environment": "^13.0.0",
    "@cucumber/core": "^0.8.3",
    "@cucumber/cucumber-expressions": "^19.0.0",
    "@cucumber/fake-cucumber": "file:./",
    "@cucumber/gherkin": "^38.0.0",
    "@cucumber/gherkin-streams": "^6.0.0",
    "@cucumber/gherkin-utils": "^11.0.0",
    "@cucumber/message-streams": "^4.0.1",
    "@cucumber/messages": "^32.0.0",
    "@cucumber/query": "^15.0.0",
    "@cucumber/tag-expressions": "^9.0.0",
    "globby": "^16.0.0",
    "stack-utils": "2.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.0.0",
    "@types/stack-utils": "2.0.3",
    "ajv": "^8.11.0",
    "eslint": "^10.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.0.0",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^4.0.0"
  }
}
